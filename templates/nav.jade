mixin menuMaker( navName, stuff )
	ul( role='menu', class='lst ' + navName + '-lst ' + navName + 's' )
		each val, i in stuff
			case navName
				when 'filter'
					li( role='menuitem', class='itm ' + navName + '-itm ' + navName + '-itm-' + i )
						a( class=navName + '-lnk lnk', href=val, ng-click='refilter('+ val +')' )= val
				when 'add'
					li( role='menuitem', class='itm ' + navName + '-itm ' + navName + '-itm-' + i )
						a( class=navName + '-lnk lnk', href="#" )= val
				default
					li( role='menuitem', class='itm ' + navName + '-itm ' + navName + '-itm-' + i )
						a( class=navName + '-lnk lnk', href=val, target='_blank' )= i