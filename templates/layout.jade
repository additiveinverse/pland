doctype html
block vars
	- var bodyclass = 'home'

html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			meta(http-equiv='Content-Type', content='text/html; charset=utf-8')

		title
			block title
				= locals.title

		link( rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description )

		link( rel='stylesheet', href='css/layout.min.css' )
		link( rel='stylesheet', href='css/global.css' )

		script( src='js/head.min.js' )
		script.
			head.js(
				{ ang: 'js/angular.js' }
			,	{ jq: 'js/zepto.min.js' }
			,	{ gbl: 'js/prm.js' }
			);
			prfx = 'js/';

body(lang='en')
	.page
		header( class='hdr page-hdr ps', role='banner' )
			h1( class='ttl page-ttl', title=locals.title , role='banner' )
				span( class='logo page-ttl-logo' )= locals.description
				a(class="page-ttl-lnk lnk", href=locals.url )= locals.title

			p( class='nfo page-nfo', role='note' )
				span( class='page-nfo-vrsn nfo' )= locals.version
				span( class='page-nfo-yr nfo' )= new Date().getFullYear()

			include nav
			nav( class='nav nav-filter', id='grid-filter', role='navigation' )
				+menuMaker( 'filter', locals.cats )

				- var Aname = 'add'
				ul( role='menu', class='lst ' + Aname + '-lst' )
					- var articles = env.helpers.getArticles(contents)
					each article in articles
						- var permalink = locals.url + article.url
						li( role='menuitem', class='itm ' + Aname + '-itm ' + Aname )
							a( class=Aname + '-lnk lnk', href=permalink )= article.title

			nav( class='nav network-nav', role='navigation' )
				+menuMaker('antisocial', locals.network.antisocial )
				+menuMaker('social', locals.network.social )

		main( class='ng-cloak grd page-cnt ' + bodyclass + '-content' )
			block content

