block variables
	-var post_content= 'post-content'
	-var post_class= post_content + '-' + post_id

if content.news
	section( id=post_id, class=post_content + ' ' + post_class, ui-view='news' )
		block page_nav

		section(class=post_content + '-wrap ' + post_class + '-wrap' )
			-each post in content.news
				article( class=post_class + '-section post-stuff' )
					h2( class=post_class + '-ttl ttl' )= post.title
					img( class=post_class + '-img ttl fn', src= post.image )
					p( class=post_class + '-desc' )
						!=post.content

			div( class=post_class + '-section twitter-stuff' )
				h1.ttl Twitter

			div( class=post_class + '-section soundcloud-stuff' )
				h1.ttl Soundcloud

				h1.ttl Spotify

		include link_top
