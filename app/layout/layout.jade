doctype html
block vars
	- var bodyclass = 'home'

html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			meta(http-equiv='Content-Type', content='text/html; charset=utf-8')

		title
			block title
				= locals.title

		link( rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=description )
		link( rel='stylesheet', href='https://fonts.googleapis.com/css?family=Oswald:700,300|Unica+One', type='text/css')
		link( rel='stylesheet', href=locals.url + '/css/layout.min.css', type='text/css' )
		link( rel='stylesheet', href=locals.url + '/css/proemland2014.css', type='text/css' )
		//- script( type="text/javascript", src=url + '/js/head.min.js' )
		script.
			//- 	head.js(
			//- 		{ ang: '/js/angular.js' },
			//- 		{ gbl: '/js/prm.js' }
			//- 	);
			prfx = '/js/';

	body(lang='en', ng-app='appProem')
		.page
			header( class='hdr page-hdr ps', role='banner' )
				h1( class='ttl page-hdr-ttl', title=locals.title , role='banner' )
					a(class="page-hdr-ttl-lnk lnk", href=url )= locals.title
					p( class='nfo page-nfo', role='note' )
						span.page-nfo-desc.nfo= locals.description
						span.page-nfo-vrsn.nfo= 'v' + locals.version
						span.page-nfo-yr.nfo= new Date().getFullYear()
						img( class='logo page-hdr-ttl-logo' src='../img/logo_flat.svg' )

				include nav
				nav( class='nav nav-filter', id='grid-filter', role='navigation' )
					+menuMaker( 'filter', locals.discog )
					span( ng-click='query=""', class='btn btn-reset filter-btn-reset', title='Reset Filters' ) reset

				nav( class='nav network-nav', role='navigation' )
					+menuMaker( 'info', locals.info )
					+menuMaker( 'antisocial', network.antisocial )
					+menuMaker( 'social', network.social )

			main( class='ng-cloak grd page-content ' + bodyclass + '-content' )
				block content
				block static

	script( type="text/javascript", src=locals.url + '/js/angular.js' )
	script( type="text/javascript", src=locals.url + '/js/prm.js' )